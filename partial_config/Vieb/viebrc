nmap <c-a-h> <action.moveTabBackward>
nmap <c-a-l> <action.moveTabForward>
nmap O <action.openNewTab>o
nmap q <action.closeTab>
nmap <c-s-n> :set<space>clearhistoryonquit!<cr>
nmap <c-w> <action.closeTab>

inoremap <c-i> <action.editWithVim>

fmap <C-c> <action.stopFollowMode>

cmap jk <action.toNormalMode>
