[commands]
status.relative = False

[defaults]
commit = -A
amend = -A

[ui]
merge = :merge
editor = nvr -cc tabe --remote-wait +"setlocal bufhidden=wipe"

[merge-tools]
# nvr.args = -cc tabe -O other local base +"wincmd J | windo diffthis"
# nvr.args = -s -cc tabnew -O $other $local +"wincmd J | windo diffthis"
nvr.gui = False

[pager]
ignore = log, cls, .root
pager = delta

[extensions]
beautifygraph =
unsupported.tree =
pager =
journal =

[color]
desc.here = red bold

[color256]
changeset.public=brightblue
