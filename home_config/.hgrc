[commands]
status.relative = False

[ui]
merge = nvr
editor = nvr -cc tabe --remote-wait +"setlocal bufhidden=wipe"

[merge-tools]
nvr.args = -s -cc tabnew -o $base -O $other $local +"windo diffthis"
nvr.gui = False

[pager]
ignore = log, cls, .root
pager = delta

[extensions]
beautifygraph =
unsupported.tree =
pager =

[color]
desc.here = red bold

[color256]
changeset.public=brightblue
